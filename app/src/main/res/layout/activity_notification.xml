<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jesus.pksapp.NotificationActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
       >

        <TextView
            android:id="@+id/notify_From"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Sender"
            android:textColor="#000000"
            android:layout_alignLeft="@+id/notify_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/notify_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notify_From"
            android:layout_marginTop="15dp"
            android:text="TXT : "
            android:textColor="#000ff0"
            android:textSize="18sp" />
    </RelativeLayout>
</RelativeLayout>
