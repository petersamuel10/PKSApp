<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/users_Image_list"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/button_backround"
        android:scaleType="centerCrop"
        android:src="@mipmap/btnface" />

    <TextView
        android:id="@+id/user_name_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_toEndOf="@+id/users_Image_list"
        android:text="Users Name Loading ..."
        android:textColor="#000000"
        android:textSize="16sp" />
</RelativeLayout>