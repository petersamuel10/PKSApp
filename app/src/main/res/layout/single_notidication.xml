<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mNotifyImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/button_backround"
        android:scaleType="centerCrop"
        android:src="@mipmap/btnface" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/head"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/mNotifyImage"
        >
        <TextView
            android:id="@+id/mNotifName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Users Name Loading ..."
            android:textColor="#000000"
            android:textSize="20sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/mNotifyMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/head"
        android:layout_toEndOf="@+id/mNotifyImage"
        android:text="Message Data"
        android:textColor="#000ff0"
        android:textSize="12sp" />
</RelativeLayout>